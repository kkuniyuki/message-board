<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<!--<div class="container-fluid">-->
    <%= form_for(@message) do |f| %>
  <table class="table">
    <div class="row">
        <div class="col-sm-3">
     　　 <th>名前:</th>
     　　 <td>
          <%= f.text_area :name, class: "hogehoge", size: "30x1"%>
          </td>
        </div>
    　　
    　　<div class="col-sm-3">
      　　<th>内容:</th>
     　　 <td>
    　　  <%= f.text_area :body, class: "hogehoge", size: "30x1"%>
          </td>
        </div>
        
        <div class="col-sm-3">
     　　 <td>
          <%= f.submit class: "btn btn-sm btn-primary" %>
          </td>
        </div>
    </div>
  </table>
  <!--</div>-->
<% end %>